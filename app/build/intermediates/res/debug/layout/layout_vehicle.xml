<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/addVehicle">
		
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"	    
	    android:orientation="vertical">

	    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/header_height">

	       <com.app.bulkgasoline.PhotosLinearLayout
			    android:layout_width="wrap_content"
			    android:id="@+id/id_add_vehicle_photo"
			    android:layout_centerHorizontal="true"
			    android:layout_height="fill_parent"/>
	       
	    </RelativeLayout>
	    
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginTop="@dimen/activity_vertical_margin"
			android:background="#aa8e4903"
			android:layout_height="1dp"/>
		
	    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/item_height">
	    
	        <TextView style="@style/FormTextIndeed" android:id="@+id/id_text_indeed"/>
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_vehicle_type"
				android:id="@+id/id_label_vehicle_type"
				android:layout_toRightOf="@+id/id_text_indeed"
			/>
			<com.app.bulkgasoline.SpinnerVehicleType
			    style="@style/FormSpinnerStyle"
				android:id="@+id/id_text_vehicle_type_spinner"
				android:layout_width="fill_parent"
				android:layout_toRightOf="@+id/id_label_vehicle_type"
				android:layout_centerVertical="true"
			/>
		    
	    </RelativeLayout>
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/item_height">
	    
	        <TextView style="@style/FormTextIndeed"/>
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_vehicle_color"
			/>
	        
	        <EditText style="@style/FormEditStyle"
		        android:id="@+id/id_text_vehicle_color"
			    android:layout_width="match_parent"
		    />
	        
	    </LinearLayout>
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/item_height">
	    
	        <TextView style="@style/FormTextIndeed"/>
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_vehicle_number"
			/>
	        
	        <EditText style="@style/FormEditStyle"
		        android:id="@+id/id_text_vehicle_number"
			    android:layout_width="match_parent"
		    />	        
	    </LinearLayout>
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/item_height">
	    
	        <TextView style="@style/FormTextIndeed" android:visibility="invisible"/>
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_vehicle_peoples"
			/>
	        
	        <EditText style="@style/FormEditStyle"
		        android:id="@+id/id_text_vehicle_peoples"
		        android:inputType="number"
			    android:layout_width="match_parent"
		    />	        
	    </LinearLayout>
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/item_height">
	    
	        <TextView style="@style/FormTextIndeed" android:visibility="invisible"/>
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_vehicle_direction"
			/>
	        
	        <EditText style="@style/FormEditStyle"
		        android:id="@+id/id_text_vehicle_direction"
			    android:layout_width="match_parent"
		    />	        
	    </LinearLayout>
	    
	   
	    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/item_height">

	        <TextView style="@style/FormTextIndeed" android:id="@+id/id_text_indeed"/>
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_operator"
				android:id="@+id/id_label_vehicle_operator"
				android:layout_toRightOf="@+id/id_text_indeed"
			/>
	         <com.app.bulkgasoline.SpinnerOperator
		        android:id="@+id/id_text_vehicle_operator_spinner"
			    android:layout_width="match_parent"
			    android:layout_centerVertical="true"
			    style="@style/FormSpinnerStyle"
			    android:layout_toRightOf="@+id/id_label_vehicle_operator"
		    />

	    </RelativeLayout>

	    <Button
	        android:id="@+id/id_button_add_vehicle"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:layout_marginTop="@dimen/activity_vertical_margin"
	    	android:layout_marginBottom="@dimen/layout_top_margin"
		    android:text="@string/text_button_checkin"
		    android:background="@drawable/bottom_bar_bg"
			android:textColor="@color/color_tilte_bar_text"
		/>
	</LinearLayout>
</ScrollView><!-- From: file:/G:/Vikicc_Git/gasoline1/app/src/main/res/layout/layout_vehicle.xml -->