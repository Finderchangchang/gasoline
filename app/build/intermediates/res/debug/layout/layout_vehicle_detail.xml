<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" android:id="@+id/id_title_bar_layout" android:visibility="gone"/>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:id="@+id/id_title_layout"
	    android:background="#46e38a2f"
	    android:layout_marginTop="24dp"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingBottom="10dp"
	    android:layout_height="@dimen/title_bar_height">
	    
		<TextView style="@style/MainTitleStyle"
			android:text="@string/text_vehicle_detail"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="bottom"
		/>

		<ImageView
	        android:id="@+id/id_button_back"
			android:src="@drawable/icon_back"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
			    
	</RelativeLayout>
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
		android:background="@color/color_activity_bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
			
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"	    
		    android:orientation="vertical">

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/header_height">
	
		       <com.app.bulkgasoline.PhotosLinearLayout
				    android:layout_width="wrap_content"
				    android:id="@+id/id_vehicle_photos"
				    android:layout_centerHorizontal="true"
				    android:layout_height="fill_parent"/>
		       
		    </RelativeLayout>
	    
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:background="@drawable/sep_line"
				android:layout_height="wrap_content"/>
			
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/item_height">
		    
		        <TextView style="@style/FormTextStyle"
					android:text="@string/text_vehicle_type"
				/>
		         <TextView style="@style/FormTextStyle"
			        android:id="@+id/id_text_vehicle_type"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="大型客车"
			    />	
		    </LinearLayout>
		    
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/item_height">
		    
		        <TextView style="@style/FormTextStyle"
					android:text="@string/text_vehicle_color"
				/>
	        
		        <TextView style="@style/FormTextStyle"
			        android:id="@+id/id_text_vehicle_color"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="红"
			    />	
		    </LinearLayout>
		    
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/item_height">
		    
		        <TextView style="@style/FormTextStyle"
					android:text="@string/text_vehicle_number"
				/>
		        
		        <TextView style="@style/FormTextStyle"
			        android:id="@+id/id_text_vehicle_number"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="冀A 100101"
			    />	        
		    </LinearLayout>
		    
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/item_height">
		    
		        <TextView style="@style/FormTextStyle"
					android:text="@string/text_vehicle_peoples"
				/>
		        
		        <TextView style="@style/FormTextStyle"
			        android:id="@+id/id_text_vehicle_peoples"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="3"
			    />	        
		    </LinearLayout>
		    
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/item_height">
		    
		        <TextView style="@style/FormTextStyle"
					android:text="@string/text_vehicle_direction"
				/>
		        
		        <TextView style="@style/FormTextStyle"
			        android:id="@+id/id_text_vehicle_direction"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="北市区"
			    />	        
		    </LinearLayout>
		    
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/item_height">

		        <TextView style="@style/FormTextStyle"
					android:text="@string/text_operator"
				/>
		        
		        <TextView style="@style/FormTextStyle"
			        android:id="@+id/id_text_operator"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="李小明"
			    />
		        
		    </LinearLayout>
		    
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/item_height">
		    
		        <TextView style="@style/FormTextStyle"
					android:text="@string/text_add_date"
				/>
		        
		        <TextView style="@style/FormTextStyle"
			        android:id="@+id/id_text_datetime"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="2015-01-11"
			    />	        
		    </LinearLayout>
		    
		</LinearLayout>
	</ScrollView>
</LinearLayout><!-- From: file:/G:/Vikicc_Git/gasoline1/app/src/main/res/layout/layout_vehicle_detail.xml -->