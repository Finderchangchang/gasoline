<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/item_vertical_space"
	    android:layout_marginBottom="@dimen/item_vertical_space"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"    
	    android:orientation="vertical">
		
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/query_item_height">
	    
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_vehicle_type"
			/>
	         <TextView style="@style/FormItemTextStyle"
	            android:id="@+id/id_text_vehicle_type"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="大型客车"
		    />	
	    </LinearLayout>

	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/query_item_height">
	    
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_vehicle_number"
			/>
	        
	        <TextView style="@style/FormItemTextStyle"
	            android:id="@+id/id_text_vehicle_number"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="冀A 100101"
		    />	        
	    </LinearLayout>

	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/query_item_height">
	    
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_vehicle_direction"
			/>
	        
	        <TextView style="@style/FormItemTextStyle"
	            android:id="@+id/id_text_vehicle_direction"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="北市区"
		    />	        
	    </LinearLayout>
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/query_item_height">
	    
	        <TextView style="@style/FormTextStyle"
				android:text="@string/text_add_date"
			/>
	        
	        <TextView style="@style/FormItemTextStyle"
	            android:id="@+id/id_text_datetime"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="2015-01-11"
		    />	        
	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout><!-- From: file:/G:/Vikicc_Git/gasoline1/app/src/main/res/layout/layout_vehicle_item.xml -->