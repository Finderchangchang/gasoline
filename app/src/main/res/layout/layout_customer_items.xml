<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/activity_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_vertical_space"
        android:layout_marginTop="@dimen/item_vertical_space"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/query_item_height">

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/text_customer_name" />

            <TextView
                android:id="@+id/id_text_customer_name"
                style="@style/FormItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="王三" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/query_item_height">

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/text_liter" />

            <TextView
                android:id="@+id/id_text_liter"
                style="@style/FormItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/query_item_height">

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/text_buy_intent" />

            <TextView
                android:id="@+id/id_text_customer_purpose"
                style="@style/FormItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="机械" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/query_item_height">

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/text_buy_date" />

            <TextView
                android:id="@+id/id_text_datetime"
                style="@style/FormItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2015-01-11" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>