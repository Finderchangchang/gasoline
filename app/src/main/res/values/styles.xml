<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Panel">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="FullScreenAppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="FormEditStyle">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/form_edit_bg</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <style name="FormSpinnerStyle">
        <item name="android:background">@drawable/form_edit_bg</item>
        <item name="android:layout_height">@dimen/edit_height</item>
    </style>
    
    <style name="FormItemTextStyle">
		<item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="FormTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#5f210f</item>
    </style>
    
    <style name="LoginFormTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#5f210f</item>
    </style>
    
    <style name="LoginFormEditStyle" parent="LoginFormTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MainTitleStyle">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#e35000</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SubTitleStyle">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#e35000</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="FormTextIndeed">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:text">*</item>       

    </style>
	
</resources>